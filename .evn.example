# Sahayak Environment Configuration - GEMINI VERSION

# Application
APP_NAME=Sahayak
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql://sahayak:sahayak_password@db:5432/sahayak_db

# ============== GEMINI API (NEW!) ==============
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# ============== LOCAL WHISPER CONFIG ==============
# Model sizes: tiny, base, small, medium, large
# Larger = more accurate but slower and uses more RAM
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# Twilio (Voice - optional for now)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Voice Settings
SILENCE_THRESHOLD_SECONDS=1.5
CONFIDENCE_THRESHOLD=0.85
SAFE_REFUSAL_THRESHOLD=0.90

# Wallet Settings
MAX_TRANSACTION_AMOUNT=2000

# Notifications (disabled for testing)
WHATSAPP_ENABLED=false
SMS_ENABLED=false